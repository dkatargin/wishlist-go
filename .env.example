# Environment variables для docker-compose
# Скопируйте этот файл в .env и настройте под ваши нужды

# PostgreSQL
POSTGRES_DB=wishlist
POSTGRES_USER=wishlist_user
POSTGRES_PASSWORD=securepassword

# RabbitMQ
RABBITMQ_USER=wishlist_user
RABBITMQ_PASSWORD=rabbitpassword
RABBITMQ_VHOST=wishlist
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Backend
GIN_MODE=release
CONFIG_PATH=config.yaml

# Frontend build args
VITE_BACKEND_HOST=localhost
VITE_BACKEND_PORT=8080
VITE_BACKEND_SCHEME=http
APP_VERSION=1.0.0

# Telegram (замените на ваш токен)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Sentry (опционально)
SENTRY_DSN=YOUR_SENTRY_DSN_HERE
SENTRY_ENVIRONMENT=production

