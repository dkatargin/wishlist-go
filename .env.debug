# Environment variables для Debug окружения
# Скопируйте этот файл в .env.debug

# PostgreSQL
POSTGRES_DB=wishlist_debug
POSTGRES_USER=wishlist_user
POSTGRES_PASSWORD=securepassword
POSTGRES_PORT=5433

# Backend
BACKEND_PORT=8081
BACKEND_DEBUG_PORT=8082
GIN_MODE=debug
LOG_LEVEL=debug

# Delve Debugger
DELVE_PORT=2345
DELVE_DEBUG_PORT=2346

# Frontend
FRONTEND_PORT=3002
VITE_BACKEND_HOST=localhost
VITE_BACKEND_PORT=8081
VITE_BACKEND_SCHEME=http
APP_VERSION=debug-1.0.0

# Go
GO_VERSION=1.25

# Adminer (Database UI)
ADMINER_PORT=8083

# Mailhog (Email testing)
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3003
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Telegram (замените на ваш токен)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Sentry (опционально)
SENTRY_DSN=YOUR_SENTRY_DSN_HERE
SENTRY_ENVIRONMENT=debug

# Profiling
ENABLE_PROFILING=true

